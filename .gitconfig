[user]
	name = Pavel Bondar
	email = pasha117@gmail.com
[color]
	ui = auto
[alias]
	co = checkout
	st = status
	di = diff -w --no-prefix
	df = diff
	dc = diff --cached
	ci = commit
	br = branch
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ls = ls-files

	# Show files ignored by git:
	ign = ls-files -o -i --exclude-standard
	meta-fs = !/opt/bin/git-meta-fs

[apply]
	whitespace = nowarn
[push]
	default = tracking
[rebase]
	stat = yes
[gitreview]
	username = pavel_bondar
[url "git@gitlab.com:"]
	insteadOf = https://gitlab.com/
[url "git@github.com:"]
	insteadOf = https://github.com/
[pull]
	rebase = true
[include]
	# Load secrets from separate file
	path = ./.gitsecret
[http "https://gopkg.in"]
	followRedirects = true
